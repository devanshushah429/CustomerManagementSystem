@model IEnumerable<ProductModel>

<h1> Product List </h1>
<a asp-controller="Product" asp-action="AddEditProduct" class="btn btn-primary">Add Product</a>
@if (Model.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>
                <td>Product ID</td>
                <td>Product Name</td>
                <td>Product Price</td>
                <td>Description</td>
                <td>Created</td>
                <td>Modified</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductModel productModel in Model)
            {
                <tr>
                    <td>@productModel.ProductID</td>
                    <td>@productModel.ProductName</td>
                    <td>@productModel.ProductPrice</td>
                    <td>@productModel.Description</td>
                    <td>@(productModel.Created?.ToString("dd-MM-yyyy") ?? "N/A")</td>
                    <td>@(productModel.Modified?.ToString("dd-MM-yyyy") ?? "N/A")</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@productModel.ProductID" class="btn btn-outline-primary">
                            Details
                        </a>
                        <a asp-controller="Product" asp-action="AddEditProduct" asp-route-id="@productModel.ProductID" class="btn btn-outline-success">
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@productModel.ProductID" class="btn btn-outline-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No products to display.</h2>
}

